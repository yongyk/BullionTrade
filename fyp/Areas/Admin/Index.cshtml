@model List<Product>
<body style="margin-top:100px;">
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2>Product List</h2>
            </div>
        
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create new Product
            </a>
            </div>
        </div>
<table class="table table-bordered table-stripped">
    <thead>
    <tr>
        <th>
             Id
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
        <th>Category</th>
    </tr>
    </thead>
    <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>@obj.Description</td>
                    <td>@obj.Price</td>
                    <td></td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pen"></i> Edit
                            </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-pen"></i> Delete
                                </a>
                        </div>
                    </td>
                 </tr>
        }
    </tbody>
</table>
</div>
</body>