@model AppointmentSlot
<body style="margin-top:100px;">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2>Create Slot</h2>
                <hr />
            </div>

            <div class="mb-3 row p-1">
                <label class="p-0" asp-for="Date"></label>
                <input asp-for="Date" type="text" class="form-control"placeholder="dd/mm/yyyy" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="p-0" asp-for="Time"></label>
                <input asp-for="Time" type="text" class="form-control" placeholder="24:00"/>
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">
                        Create
                    </button>
                </div>
                @*col-md-3 means that if screen is smaller than medium it will take 3 columns else it will take 6 column*@
                <div class="col-6 col-md-3">
                    <a asp-controller="AppointmentSlot" asp-action="Index" class="btn btn-outline-secondary form-control">
                        Back To List
                    </a>
                </div>


            </div>

        </div>
    </form>
</body>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}