@model Article
<form method="post">
<body style="margin-top:150px">
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="text-center">
                        <!-- Article image at the top -->
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="card-img-top mx-auto d-block img-fluid" style="max-width: 30%; height:auto;">
                    </div>
                    <div class="card-body text-center">
                        <h2 class="card-title">@Model.Title</h2>
                        <p class="card-text">@Html.Raw(Model.Content)</p>
                        <p class="card-text" style="font-weight:bold;">By @Model.Author on @Model.DateCreated</p>
                        <!-- Like and Share buttons -->
                        <button id="likeButton" class="btn btn-success" asp-area="Customer" asp-controller="Home" asp-action="IndexArticle">Back</button>
                        <button class="btn btn-primary" onclick="printArticle()">Download Article</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</form>

<script>
    function printArticle() {
        window.print();
    }
</script>

<style>
    @@media print {
        /* Hide every element except the article */
        body * {
            visibility: hidden;
        }
        /* Display article elements */
        .card, .card * {
            visibility: visible;
        }
        /* Adjust the position to print from the start of the page */
        .card {
            position: absolute;
            left: 0;
            top: 0;
        }
    }
</style>
