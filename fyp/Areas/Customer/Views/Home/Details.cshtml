<body style="margin-top:120px">
<form method="post">
    <input asp-for="ProductId" hidden />

    <!-- Main card for product details with a new layout and more distinct styling -->
    <div class="card border-0 mt-5 shadow-lg">
        <div class="card-header ">
        </div>
        
        <div class="card-body bg-light">
            <div class="row g-4">
                <!-- Swap image and details sides -->
                <div class="col-lg-7">
                    <h4 class="text-success">@Model.Product.Price.ToString("C")</h4>
                    <span class="badge bg-info">@Model.Product.Category.Name</span>

                    <!-- Use a more narrative style for the description -->
                    <p class="mt-4 fst-italic">@Html.Raw(Model.Product.Description)</p>

                    <div class="text-secondary">
                        <p>Brand: @Model.Product.ProductBrand</p>
                        <p>Metal: @Model.Product.ProductMetal</p>
                        <p>Purity: @Model.Product.ProductPurity</p>
                       @* <p>Available: @Model.Product.Quantity units</p>*@
                    </div>
                </div>
                <div class="col-lg-4">
                    <img src="@Model.Product.ImageUrl" alt="Image of @Model.Product.Name" class="img-fluid rounded">
                </div>
            </div>

            <!-- Enhanced interaction area -->
            <div class="row mt-3 align-items-center">
                <div class="col-md-3">
                    <div class="input-group mb-3">
                        <input asp-for="Count" type="number" class="form-control text-center" aria-label="Quantity" value="1" min="1" max="200">
                    </div>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-warning bg-gradient w-100">Add to Cart</button>
                </div>
            </div>
        </div>

        <!-- Modified footer link -->
        <div class="card-footer bg-transparent border-0">
            <div class="text-center">
                <a asp-action="Product" class="btn btn-outline-primary w-20">Explore More Products</a>
            </div>
        </div>
    </div>
</form>
</body>